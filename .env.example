# Copy to .env and fill in values for local development
# Never commit .env to version control

AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=test              # LocalStack fake credentials
AWS_SECRET_ACCESS_KEY=test

# LocalStack
LOCALSTACK_ENDPOINT=http://localhost:4566

# DynamoDB tables (auto-created by local_setup.sh)
ORDERS_TABLE=cloudflow-orders
INVENTORY_TABLE=cloudflow-inventory
RESERVATIONS_TABLE=cloudflow-reservations
PAYMENTS_TABLE=cloudflow-payments
IDEMPOTENCY_TABLE=cloudflow-idempotency
CIRCUIT_BREAKER_TABLE=cloudflow-circuit-breakers

# Messaging
EVENT_BUS_NAME=cloudflow-events

# Set by CDK after deploy
SAGA_STATE_MACHINE_ARN=

# Payment provider (mock for local dev)
PAYMENT_PROVIDER_URL=http://localhost:8080/mock-payment
